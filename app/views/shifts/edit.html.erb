<h4><%= @user.name %></h4>

<table>
  <thead>
    <tr>
      <th><%= @shift.date %></th>
    </tr>
    <tr>
      <th>開始</th>
      <th>終了</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= form_with model: @shift, local:true do |f| %>
    <tr>
      <td><%= f.time_field :start %></td>
      <td><%= f.time_field :finish %></td>
      <td><%= f.submit '修正'%></td>
    </tr>
    <% end %>
  </tbody>
</table>
