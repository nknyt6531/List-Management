<h2>顧客情報編集</h2>
<%= form_with model: @customer, local:true do |f| %>
  <h4>名前</h4>
  <%= f.text_field :last_name %>
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name_kana %>
  <%= f.text_field :first_name_kana %>
  <%= f.select :gender_id, Customer.gender_ids.keys.map %>
  <h4>生年月日</h4>
  <%= f.date_select :birthday, 
                    use_month_numbers: true, 
                    start_year: 1942, 
                    end_year: 2002, 
                    default: Date.new(1962, 1, 1),
                    date_separator: '/' %>
  <%= f.text_field :age %>
  <h4>郵便番号</h4>
  <%= f.text_field :post_code %>
  <h4>住所</h4>
  <%= f.text_area :address %>
  <h4>自宅電話</h4>
  <%= f.text_field :home_phone_number %>
  <h4>携帯電話</h4>
  <%= f.text_field :phone_number %>
  <%= f.submit '登録' %>
<% end %>