<h1>新規顧客登録</h1>
<%= form_with model: @customer, local:true do |f| %>
  <h4>名前</h4>
  <%= f.text_field :last_name %>
  <%= f.text_field :first_name %>
  <%= f.text_field :last_name_kana %>
  <%= f.text_field :first_name_kana %>
  <%= f.select :gender_id, Customer.gender_ids.keys.map %>
  <h4>生年月日</h4>
  <%= f.date_select :birth_date, use_month_numbers: true, strat_year: 1942, end_year: 2002, default: Date.new(1962, 1, 1), date_separator: '/' %>
  <%= f.select :age, Date.today.strftime("%Y%m%d").to_i - @customer.birthday.strftime("%Y%m%d").to_i/ 10000 %>
  <h4>郵便番号</h4>
  <%= f.text_field :post_code %>
  <h4>住所</h4>
  <%= f.text_area :address %>
  <h4>自宅電話</h4>
  <%= f.text_field :home_phone_number %>
  <h4>携帯電話</h4>
  <%= f.text_field :phone_number %>
  <%= f.submit '登録' %>
<% end %>